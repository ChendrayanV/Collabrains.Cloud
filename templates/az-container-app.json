{
  "$schema": "https://schema.management.azure.com/schemas/2018-05-01/subscriptionDeploymentTemplate.json#",
  "contentVersion": "1.0.0.0",
  "parameters": {
    "suffix": {
      "type": "string"
    }
  },
  "functions": [],
  "resources": [
    {
      "type": "Microsoft.Resources/resourceGroups",
      "apiVersion": "2021-04-01",
      "name": "[format('tobedeleted-{0}', parameters('suffix'))]",
      "location": "northeurope",
      "tags": {
        "env": "development",
        "owner": "chendrayan venkatesan",
        "costcenter": "AZ-0001"
      }
    },
    {
      "type": "Microsoft.Resources/deployments",
      "apiVersion": "2019-10-01",
      "name": "[format('az-container-app-deloyment-{0}', parameters('suffix'))]",
      "resourceGroup": "[format('tobedeleted-{0}', parameters('suffix'))]",
      "properties": {
        "expressionEvaluationOptions": {
          "scope": "inner"
        },
        "mode": "Incremental",
        "template": {
          "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
          "contentVersion": "1.0.0.0",
          "functions": [],
          "resources": [
            {
              "type": "Microsoft.OperationalInsights/workspaces",
              "apiVersion": "2020-03-01-preview",
              "name": "LAW-TOBEDELETED",
              "location": "[resourceGroup().location]",
              "properties": {
                "retentionInDays": 30,
                "features": {
                  "searchVersion": 1
                },
                "sku": {
                  "name": "PerGB2018"
                }
              }
            }
          ],
          "outputs": {
            "customerId": {
              "type": "string",
              "value": "[reference(resourceId('Microsoft.OperationalInsights/workspaces', 'LAW-TOBEDELETED')).customerId]"
            },
            "primarySharedKey": {
              "type": "string",
              "value": "[listKeys(resourceId('Microsoft.OperationalInsights/workspaces', 'LAW-TOBEDELETED'), '2020-03-01-preview').primarySharedKey]"
            }
          }
        }
      },
      "dependsOn": [
        "[subscriptionResourceId('Microsoft.Resources/resourceGroups', format('tobedeleted-{0}', parameters('suffix')))]"
      ]
    },
    {
      "type": "Microsoft.Resources/deployments",
      "apiVersion": "2019-10-01",
      "name": "[format('kube-deployment-{0}', parameters('suffix'))]",
      "resourceGroup": "[format('tobedeleted-{0}', parameters('suffix'))]",
      "properties": {
        "expressionEvaluationOptions": {
          "scope": "inner"
        },
        "mode": "Incremental",
        "parameters": {
          "customerId": {
            "value": "[reference(extensionResourceId(format('/subscriptions/{0}/resourceGroups/{1}', subscription().subscriptionId, format('tobedeleted-{0}', parameters('suffix'))), 'Microsoft.Resources/deployments', format('az-container-app-deloyment-{0}', parameters('suffix'))), '2019-10-01').outputs.customerId.value]"
          },
          "primarySharedKey": {
            "value": "[reference(extensionResourceId(format('/subscriptions/{0}/resourceGroups/{1}', subscription().subscriptionId, format('tobedeleted-{0}', parameters('suffix'))), 'Microsoft.Resources/deployments', format('az-container-app-deloyment-{0}', parameters('suffix'))), '2019-10-01').outputs.primarySharedKey.value]"
          }
        },
        "template": {
          "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
          "contentVersion": "1.0.0.0",
          "parameters": {
            "customerId": {
              "type": "string"
            },
            "primarySharedKey": {
              "type": "string"
            }
          },
          "functions": [],
          "resources": [
            {
              "type": "Microsoft.Web/kubeEnvironments",
              "apiVersion": "2021-01-15",
              "name": "ube-demo",
              "location": "northeurope",
              "properties": {
                "type": "managed",
                "appLogsConfiguration": {
                  "destination": "log-analytics",
                  "logAnalyticsConfiguration": {
                    "customerId": "[parameters('customerId')]",
                    "sharedKey": "[parameters('primarySharedKey')]"
                  }
                }
              }
            }
          ],
          "outputs": {
            "kubeEnvironmentId": {
              "type": "string",
              "value": "[resourceId('Microsoft.Web/kubeEnvironments', 'ube-demo')]"
            }
          }
        }
      },
      "dependsOn": [
        "[extensionResourceId(format('/subscriptions/{0}/resourceGroups/{1}', subscription().subscriptionId, format('tobedeleted-{0}', parameters('suffix'))), 'Microsoft.Resources/deployments', format('az-container-app-deloyment-{0}', parameters('suffix')))]",
        "[subscriptionResourceId('Microsoft.Resources/resourceGroups', format('tobedeleted-{0}', parameters('suffix')))]"
      ]
    },
    {
      "type": "Microsoft.Resources/deployments",
      "apiVersion": "2019-10-01",
      "name": "[format('tobedel-{0}', parameters('suffix'))]",
      "resourceGroup": "[format('tobedeleted-{0}', parameters('suffix'))]",
      "properties": {
        "expressionEvaluationOptions": {
          "scope": "inner"
        },
        "mode": "Incremental",
        "parameters": {
          "kubeEnvironmentId": {
            "value": "[reference(extensionResourceId(format('/subscriptions/{0}/resourceGroups/{1}', subscription().subscriptionId, format('tobedeleted-{0}', parameters('suffix'))), 'Microsoft.Resources/deployments', format('kube-deployment-{0}', parameters('suffix'))), '2019-10-01').outputs.kubeEnvironmentId.value]"
          }
        },
        "template": {
          "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
          "contentVersion": "1.0.0.0",
          "parameters": {
            "kubeEnvironmentId": {
              "type": "string"
            },
            "containerName": {
              "type": "string",
              "defaultValue": "tobedeleteddemo"
            },
            "userName": {
              "type": "string",
              "defaultValue": "chenv"
            },
            "targetPort": {
              "type": "int",
              "defaultValue": 80
            },
            "image": {
              "type": "string",
              "defaultValue": "chenv/collabrains.cloud:v1.0.3"
            },
            "ingress": {
              "type": "object",
              "defaultValue": {
                "external": true,
                "targetPort": "[parameters('targetPort')]",
                "transport": "auto"
              }
            }
          },
          "functions": [],
          "resources": [
            {
              "type": "Microsoft.Web/containerapps",
              "apiVersion": "2021-03-01",
              "name": "[parameters('containerName')]",
              "location": "[resourceGroup().location]",
              "properties": {
                "kubeEnvironmentId": "[parameters('kubeEnvironmentId')]",
                "configuration": {
                  "secrets": [
                    {
                      "name": "container-registry-password",
                      "value": "About-PowerShell@890*"
                    }
                  ],
                  "registries": [
                    {
                      "server": "docker.io",
                      "username": "[parameters('userName')]",
                      "PasswordSecretRef": "container-registry-password"
                    }
                  ],
                  "ingress": "[parameters('ingress')]"
                },
                "template": {
                  "containers": [
                    {
                      "image": "[parameters('image')]",
                      "name": "collabrains",
                      "resources": {
                        "cpu": ".25",
                        "memory": ".5Gi"
                      }
                    }
                  ]
                }
              }
            }
          ]
        }
      },
      "dependsOn": [
        "[extensionResourceId(format('/subscriptions/{0}/resourceGroups/{1}', subscription().subscriptionId, format('tobedeleted-{0}', parameters('suffix'))), 'Microsoft.Resources/deployments', format('kube-deployment-{0}', parameters('suffix')))]",
        "[subscriptionResourceId('Microsoft.Resources/resourceGroups', format('tobedeleted-{0}', parameters('suffix')))]"
      ]
    }
  ]
}